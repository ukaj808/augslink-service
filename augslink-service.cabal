cabal-version:      3.0
name:               augslink-service
version:            0.1.0
-- synopsis:
-- description:
license:            MIT
license-file:       LICENSE
author:             fisnik
maintainer:         fisnik.ukaj@justeattakeaway.com
-- copyright:
category:           Network
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

executable augslink-service
    import:           warnings
    main-is:          Main.hs
    other-modules:      AugsLink.Internal.State 
                      , AugsLink.Service.API 
                      , AugsLink.Service.Application 
                      , AugsLink.Service.Handlers.GetHome 
                      , AugsLink.Service.Handlers.GetRoom 
                      , AugsLink.Service.Handlers.PostHome
                      , AugsLink.Service.Handlers.RoomWs 
                      , AugsLink.Service.Room 
                      , CommandLine 
    -- other-extensions:
    build-depends:      base ^>=4.16.4.0
                      , bytestring
                      , http-media
                      , mtl
                      , optparse-applicative
                      , servant-server
                      , servant-websockets
                      , unordered-containers
                      , wai
                      , warp
                      , websockets
    hs-source-dirs:   app
    default-language: GHC2021
    default-extensions: DataKinds
